<%- include ('../partials/header.ejs') %> <%- include ('../partials/navbar.ejs')
%>
<div class="container">
  <hr />
  <div class="card">
    <div class="card-header">
      <h2>Edição de Nome e/ou Link</h2>
    </div>
    <div class="card-body">
      <form method="POST" action="/articles/update">
        <input
          class="form-control"
          type="text"
          name="nome"
          placeholder="Redifina o nome"
          value="<%= article.nome %>"
        />
        <br />
        <input
          class="form-control"
          type="text"
          name="link"
          placeholder="Redifina o link"
          value="<%= article.link %>"
        />
        <br />
        <input type="hidden" name="id" value="<%= article.id %>" />
        <br />
        <button class="btn btn-success">Atualizar</button>
      </form>
    </div>
  </div>
</div>

